# Development Environment Configuration
# Copy this to .env for local development

SECRET_KEY=django-insecure-dev-key-change-this-in-production

# ALWAYS set DEBUG=True for local development
DEBUG=True

# Development hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Use SQLite for local development (or set to PostgreSQL connection string)
DATABASE_URL=sqlite:///db.sqlite3

# Cloudinary (use test credentials or your real ones)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email (optional for development)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# CSRF (not needed for localhost)
CSRF_TRUSTED_ORIGINS=
